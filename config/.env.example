# HER Framework Environment Configuration Example
# Copy this file to .env and modify the values as needed for your environment

# =============================================================================
# CORE DIRECTORY CONFIGURATION
# =============================================================================

# Path to the models directory containing MarkupLM and other ML models
# Default: ./src/her/models (relative to project root)
HER_MODELS_DIR=./src/her/models

# Path to the cache directory for embeddings and other cached data
# Default: ./.her_cache (relative to project root)
HER_CACHE_DIR=./.her_cache

# =============================================================================
# FRAMEWORK BEHAVIOR CONFIGURATION
# =============================================================================

# Strict mode - enables fail-fast behavior and strict validation
# Set to 0 only for local debugging
# Values: 1 (enabled, default) | 0 (disabled)
HER_STRICT=1

# Performance optimization settings
# Values: 1 (enabled, default) | 0 (disabled)
HER_PERF_OPT=1

# Force accessibility extraction even when not strictly required
# Values: 1 (enabled, default) | 0 (disabled)
HER_FORCE_AX=1

# Select all elements for MiniLM processing
# Values: 1 (enabled, default) | 0 (disabled)
HER_ALL_ELEMENTS=1

# Disable heuristics and use MarkupLM-only mode
# Values: true (disabled) | false (enabled, default)
HER_DISABLE_HEURISTICS=false

# =============================================================================
# CANONICAL DESCRIPTOR CONFIGURATION
# =============================================================================

# Canonical descriptor building mode
# Values: both (default) | dom_only | accessibility_only
HER_CANONICAL_MODE=both

# Debug canonical descriptor building process
# Values: 1 (enabled) | 0 (disabled, default)
HER_DEBUG_CANONICAL=0

# =============================================================================
# HIERARCHY CONFIGURATION
# =============================================================================

# Enable hierarchical context processing
# Values: true (enabled) | false (disabled, default)
HER_USE_HIERARCHY=false

# Enable two-stage MarkupLM processing
# Values: true (enabled) | false (disabled, default)
HER_USE_TWO_STAGE=false

# Enable hierarchy debugging output
# Values: true (enabled) | false (disabled, default)
HER_DEBUG_HIERARCHY=false

# =============================================================================
# DEBUGGING AND TESTING CONFIGURATION
# =============================================================================

# Enable debug output for candidate elements
# Values: 1 (enabled) | 0 (disabled, default)
HER_DEBUG_CANDIDATES=0

# Enable end-to-end testing mode
# Values: 1 (enabled) | 0 (disabled, default)
HER_E2E=0

# Enable dry run mode for testing without browser
# Values: 1 (enabled) | 0 (disabled, default)
HER_DRY_RUN=0

# =============================================================================
# EXTERNAL DEPENDENCIES (for reference)
# =============================================================================

# These are used by pip during installation and setup
# PIP_NO_SETUPTOOLS=0
# PIP_NO_WHEEL=0