    {
        "intent_id": "navigate-products",
        "sequence": [
            {
                "action": "click",
                "query": "click products link",
                "expected": {
                    "used_locator": "nav a:nth-of-type(2)",
                    "strategy": "css",
                    "notes": "Should trigger pushState navigation"
                }
            },
            {
                "action": "verify",
                "expected": {
                    "url_changed": true,
                    "url_pattern": "/products",
                    "dom_mutated": true,
                    "no_page_reload": true
                }
            }
        ]
    },
    {
        "intent_id": "load-dynamic-content",
        "sequence": [
            {
                "action": "click",
                "query": "load more products",
                "expected": {
                    "used_locator": "#load-more",
                    "strategy": "css"
                }
            },
            {
                "action": "verify",
                "expected": {
