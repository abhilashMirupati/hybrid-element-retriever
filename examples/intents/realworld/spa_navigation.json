{
  "name": "SPA Navigation and Interaction",
  "description": "Navigate through SPA routes and interact with dynamic content",
  "url": "file:///workspace/examples/dom_samples/realworld/spa_navigation.html",
  "steps": [
    {
      "step": 1,
      "action": "click",
      "intent": "Navigate to Products page",
      "expected_locator": "//a[@data-route='products']",
      "validation": {
        "url_changed": true,
        "contains": "#/products",
        "element_visible": true,
        "selector": ".product-grid"
      }
    },
    {
      "step": 2,
      "action": "wait",
      "intent": "Wait for products to load",
      "duration_ms": 500,
      "validation": {
        "elements_count": 6,
        "selector": ".product-card"
      }
    },
    {
      "step": 3,
      "action": "click",
      "intent": "Add Premium Widget to cart",
      "expected_locator": "//button[@class='add-to-cart' and @data-product-id='1']",
      "alternative_locators": [
        "//div[contains(@class, 'product-card')]//div[text()='Premium Widget']/following-sibling::button",
        "//button[text()='Add to Cart'][1]"
      ],
      "validation": {
        "notification_shown": true,
        "notification_text": "Product 1 added to cart!"
      }
    },
    {
      "step": 4,
      "action": "click",
      "intent": "Go to Settings page",
      "expected_locator": "//a[@href='#/settings']",
      "validation": {
        "url_changed": true,
        "contains": "#/settings",
        "form_exists": true
      }
    },
    {
      "step": 5,
      "action": "type",
      "intent": "Change display name in settings",
      "value": "John Smith",
      "expected_locator": "//input[@id='display-name']",
      "clear_first": true,
      "validation": {
        "value_set": true,
        "expected_value": "John Smith"
      }
    },
    {
      "step": 6,
      "action": "select",
      "intent": "Select EST timezone",
      "value": "UTC-5 (EST)",
      "expected_locator": "//select[@id='timezone']",
      "validation": {
        "option_selected": true,
        "selected_value": "UTC-5 (EST)"
      }
    },
    {
      "step": 7,
      "action": "toggle",
      "intent": "Enable push notifications",
      "expected_locator": "//input[@id='push-notifications']",
      "validation": {
        "checked": true
      }
    },
    {
      "step": 8,
      "action": "click",
      "intent": "Save settings",
      "expected_locator": "//button[text()='Save Settings']",
      "validation": {
        "notification_shown": true,
        "notification_text": "Settings saved successfully!"
      }
    },
    {
      "step": 9,
      "action": "click",
      "intent": "Navigate back to Dashboard",
      "expected_locator": "//a[@data-route='dashboard']",
      "validation": {
        "url_changed": true,
        "contains": "#/dashboard",
        "elements_visible": true,
        "selector": ".metric-card"
      }
    }
  ],
  "edge_cases": [
    "SPA route changes without page reload",
    "Dynamic content loading with spinner",
    "Multiple similar buttons need disambiguation",
    "Form state persistence across navigation",
    "Notification system for user feedback"
  ]
}